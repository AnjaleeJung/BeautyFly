<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recycler_pop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/recycler_pop_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Service Provider"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:layout_constraintEnd_toStartOf="@id/recycler_pop_view"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/recycler_pop_address"
            app:layout_constraintStart_toEndOf="@id/recycler_pop_img"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/recycler_pop_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Sachal colony"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/recycler_pop_view"
            app:layout_constraintStart_toEndOf="@id/recycler_pop_img"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/recycler_pop_title"
            />
        <Button
            android:id="@+id/recycler_pop_view"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="View"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>